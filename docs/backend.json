{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["displayName", "email"]
    },
    "QuoteRequest": {
      "title": "Quote Request",
      "description": "A request for a price quote for a transport service.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the request."
        },
        "customerName": {
          "type": "string"
        },
        "customerContact": {
          "type": "string"
        },
        "pickupLocation": {
          "type": "string"
        },
        "deliveryLocation": {
          "type": "string"
        },
        "itemDescription": {
          "type": "string"
        },
        "weight": {
          "type": "number"
        },
        "dimensions": {
          "type": "string"
        },
        "specialInstructions": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["Pendent", "Acceptada", "Rebutjada"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "customerName",
        "pickupLocation",
        "deliveryLocation",
        "itemDescription",
        "weight",
        "dimensions",
        "status",
        "createdAt"
      ]
    },
    "ServiceOrder": {
      "title": "Service Order",
      "description": "An accepted service order with details for execution.",
      "type": "object",
      "properties": {
        "quoteRequestId": {
          "type": "string",
          "description": "The ID of the original quote request."
        },
        "status": {
          "type": "string",
          "enum": ["En progrés", "Completada", "Cancel·lada"]
        },
        "assignedDriver": {
          "type": "string"
        },
        "estimatedPickup": {
          "type": "string",
          "format": "date-time"
        },
        "estimatedDelivery": {
          "type": "string",
          "format": "date-time"
        },
        "actualPickup": {
          "type": "string",
          "format": "date-time"
        },
        "actualDelivery": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["quoteRequestId", "status"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public-facing profile information for each user."
    },
    "/users/{userId}/quoteRequests/{quoteRequestId}": {
      "schema": {
        "$ref": "#/entities/QuoteRequest"
      },
      "description": "Stores all quote requests created by a specific user."
    },
    "/users/{userId}/serviceOrders/{serviceOrderId}": {
      "schema": {
        "$ref": "#/entities/ServiceOrder"
      },
      "description": "Stores all active and completed service orders for a user."
    }
  }
}
